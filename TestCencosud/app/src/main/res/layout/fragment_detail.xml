<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailMovieFragment">

    <TextView
        android:id="@+id/title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/gender_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="30dp"
        android:paddingEnd="28dp"
        android:textAlignment="center"
        android:text="Genero 1, Genero 2, Genero 3"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/title_detail"
        app:layout_constraintStart_toStartOf="@+id/title_detail"
        app:layout_constraintTop_toBottomOf="@+id/title_detail">

    </TextView>


    <TextView
        android:id="@+id/releaseDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="22 Jul 2022"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/gender_detail"
        app:layout_constraintStart_toStartOf="@+id/gender_detail"
        app:layout_constraintTop_toBottomOf="@+id/gender_detail">

    </TextView>


    <TextView
        android:id="@+id/directorsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Directores"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/releaseDetail"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/releaseDetail">

    </TextView>

    <TextView
        android:id="@+id/directorsDetail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Directores"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/directorsTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/directorsTitle"
        app:layout_constraintTop_toBottomOf="@+id/directorsTitle">

    </TextView>


    <TextView
        android:id="@+id/startsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Actores"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/directorsTitle"
        app:layout_constraintTop_toBottomOf="@+id/releaseDetail">

    </TextView>

    <TextView
        android:id="@+id/stars_detail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingEnd="30dp"
        android:text="Actores 1, Actores 2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/startsTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/startsTitle"
        app:layout_constraintTop_toBottomOf="@+id/startsTitle">

    </TextView>

    <TextView
        android:id="@+id/ratingDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="112dp"
        android:text="6.5/10"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stars_detail">

    </TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toStartOf="@+id/ratingDetail"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toEndOf="@+id/durationTimeDetail"
        app:layout_constraintTop_toTopOf="@+id/ratingDetail"
        app:srcCompat="@drawable/star">

    </ImageView>

    <TextView
        android:id="@+id/durationTimeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="220 Min"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ratingDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ratingDetail">

    </TextView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="201dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>